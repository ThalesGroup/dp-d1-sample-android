<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_hint_timer_line_1"
                        style="@style/TextView.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="45dp"
                        android:gravity="center"
                        android:text="@string/tv_hint_2_tap_and_pay_timer_line_1"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_hint_timer_line_2"
                        style="@style/TextView.Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="45dp"
                        android:gravity="center"
                        android:text="@string/tv_hint_2_tap_and_pay_timer_line_2"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/tap_and_pay_symbol" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <com.thalesgroup.d1.templates.core.ui.base.ProgressWheel
                        android:id="@+id/pw_spinner"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        ProgressWheel:barColor="@color/pw_bar_color"
                        ProgressWheel:barLen="40dp"
                        ProgressWheel:barWidth="3dp"
                        ProgressWheel:circleColor="@color/pw_overlay_color"
                        ProgressWheel:contourColor="@color/transparent"
                        ProgressWheel:rimColor="@color/pw_rim_color"
                        ProgressWheel:rimWidth="2dp"
                        ProgressWheel:text="--"
                        ProgressWheel:textColor="@color/pw_text_color"
                        ProgressWheel:textSize="24sp" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginBottom="110dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_amount_currency"
                    style="@style/TextView.Body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>


